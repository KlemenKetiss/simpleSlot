{
    "compilerOptions": {
        "target": "es2016",
        "module": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "resolveJsonModule": true,
        "moduleResolution": "bundler",
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "types": ["node"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}